#!/bin/bash -eu

npm install -g npm@^5.3.0
npm -v

if [ ${TEST_SUITE} == "standard" ]; then
	echo '[medic] skipping grunt'
	exit 0
fi
npm cache clean
npm prune
npm install
npm update
npm ls || true
npm install -g grunt-cli
npm --prefix shared-libs/phone-number install
node --stack_size=10000 `which grunt` ci-build
