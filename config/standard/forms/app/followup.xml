<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>Followup Report</h:title>
    <model>
      <instance>
        <followup delimiter="#" id="followup" prefix="J1!followup!" version="2018-11-19_02-15">
          <inputs>
            <meta>
              <location>
                <lat/>
                <long/>
                <error/>
                <message/>
              </location>
            </meta>
            <source>user</source>
            <source_id/>
            <contact>
              <_id/>
              <name/>
              <patient_id/>
            </contact>
          </inputs>
          <patient_name/>
          <patient_id/>
          <age_in_days/>
          <enrollment_date/>
          <treatment_program/>
          <context_gender/>
          <task/>
          <unenrolled_note/>
          <zscore>
            <gender/>
            <weight/>
            <height/>
            <date_of_birth/>
            <zscore_age/>
            <zscore_wfh/>
            <nn/>
            <muac/>
          </zscore>
          <exit>
            <outcome/>
            <enrollment/>
            <length_stay/>
            <stay/>
            <enroll/>
          </exit>
          <summary>
            <n_2/>
            <n_4/>
            <n_5/>
            <n_6/>
            <n_7/>
            <n_8/>
            <n_9/>
            <n_10/>
            <n_11/>
            <n_12/>
          </summary>
          <meta>
            <instanceID/>
          </meta>
        </followup>
      </instance>
      <instance id="contact-summary"/>
      <bind nodeset="/followup/inputs" relevant="./source = 'user'"/>
      <bind nodeset="/followup/inputs/source" type="string"/>
      <bind nodeset="/followup/inputs/source_id" type="string"/>
      <bind nodeset="/followup/inputs/contact/_id" type="db:person"/>
      <bind nodeset="/followup/inputs/contact/name" type="string"/>
      <bind nodeset="/followup/inputs/contact/patient_id" type="string"/>
      <bind calculate="../inputs/contact/name" nodeset="/followup/patient_name" type="string"/>
      <bind calculate="../inputs/contact/patient_id" nodeset="/followup/patient_id" type="string"/>
      <bind calculate="int(decimal-date-time(today()) - decimal-date-time(date( /followup/zscore/date_of_birth )))" nodeset="/followup/age_in_days" type="string"/>
      <bind calculate="instance('contact-summary')/context/enrollment_date" nodeset="/followup/enrollment_date" type="string"/>
      <bind calculate="instance('contact-summary')/context/treatment_program" nodeset="/followup/treatment_program" type="string"/>
      <bind calculate="instance('contact-summary')/context/gender" nodeset="/followup/context_gender" type="string"/>
      <bind nodeset="/followup/task" relevant=" /followup/treatment_program  != ''" required="true()" type="select1"/>
      <bind nodeset="/followup/unenrolled_note" readonly="true()" relevant=" /followup/treatment_program  = ''" type="string"/>
      <bind nodeset="/followup/zscore/gender" required="true()" type="select1"/>
      <bind constraint=". &gt;= 0.8 and . &lt;= 68.5" jr:constraintMsg="Weight should be between 0.8 kg and 68.5 kg" nodeset="/followup/zscore/weight" required="true()" type="decimal"/>
      <bind constraint=". &gt;= 45 and . &lt;= 120" jr:constraintMsg="Height should be between 45 cm and 120 cm" nodeset="/followup/zscore/height" required="true()" type="decimal"/>
      <bind constraint=". &lt;= today() and ((decimal-date-time(.)+1770) &gt;= decimal-date-time(today()))" nodeset="/followup/zscore/date_of_birth" required="true()" type="date"/>
      <bind calculate=" /followup/age_in_days " nodeset="/followup/zscore/zscore_age" type="string"/>
      <bind nodeset="/followup/zscore/zscore_wfh" required="true()" type="decimal"/>
      <bind nodeset="/followup/zscore/nn" readonly="true()" type="string"/>
      <bind constraint=". &gt;= 5 and . &lt;= 30" jr:constraintMsg="MUAC should be between 5 and 30 cm" nodeset="/followup/zscore/muac" type="decimal"/>
      <bind nodeset="/followup/exit" relevant=" /followup/task  = 'exit'"/>
      <bind nodeset="/followup/exit/outcome" type="select1"/>
      <bind nodeset="/followup/exit/enrollment" readonly="true()" relevant=" /followup/exit/outcome  = 'cured'" type="string"/>
      <bind calculate="int(decimal-date-time(today()) - decimal-date-time(date( /followup/enrollment_date )))" nodeset="/followup/exit/length_stay" type="string"/>
      <bind nodeset="/followup/exit/stay" readonly="true()" relevant=" /followup/exit/outcome  = 'cured'" type="string"/>
      <bind nodeset="/followup/exit/enroll" relevant=" /followup/exit/outcome  = 'cured'" type="select1"/>
      <bind nodeset="/followup/summary/n_2" readonly="true()" type="string"/>
      <bind nodeset="/followup/summary/n_4" readonly="true()" type="string"/>
      <bind nodeset="/followup/summary/n_5" readonly="true()" type="string"/>
      <bind nodeset="/followup/summary/n_6" readonly="true()" type="string"/>
      <bind nodeset="/followup/summary/n_7" readonly="true()" type="string"/>
      <bind nodeset="/followup/summary/n_8" readonly="true()" type="string"/>
      <bind nodeset="/followup/summary/n_9" readonly="true()" type="string"/>
      <bind nodeset="/followup/summary/n_10" readonly="true()" relevant=" /followup/task  = 'exit'" type="string"/>
      <bind nodeset="/followup/summary/n_11" readonly="true()" relevant=" /followup/exit/outcome  = 'cured'" type="string"/>
      <bind nodeset="/followup/summary/n_12" readonly="true()" relevant=" /followup/exit/outcome  = 'cured'" type="string"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/followup/meta/instanceID" readonly="true()" type="string"/>
    </model>
  </h:head>
  <h:body class="pages">
    <group appearance="field-list" ref="/followup/inputs">
      <label>Patient</label>
      <input appearance="hidden" ref="/followup/inputs/source">
        <label>Source</label>
      </input>
      <input appearance="hidden" ref="/followup/inputs/source_id">
        <label>Source ID</label>
      </input>
      <group ref="/followup/inputs/contact">
        <label>Contact</label>
        <input appearance="db-object" ref="/followup/inputs/contact/_id">
          <label>What is the child's name?</label>
          <hint>Select a person from list</hint>
        </input>
      </group>
    </group>
    <select1 ref="/followup/task">
      <label>What task would you like to perform?</label>
      <item>
        <label>Record <output value=" /followup/treatment_program "/> follow up visit</label>
        <value>visit</value>
      </item>
      <item>
        <label>Exit from <output value=" /followup/treatment_program "/></label>
        <value>exit</value>
      </item>
    </select1>
    <input ref="/followup/unenrolled_note">
      <label>This patient is not enrolled in any treatment program. Kindly fill out their visit details below:</label>
    </input>
    <group appearance="zscore field-list" ref="/followup/zscore">
      <label></label>
      <select1 appearance="zscore-sex" ref="/followup/zscore/gender">
        <label>Child gender</label>
        <item>
          <label>Male</label>
          <value>male</value>
        </item>
        <item>
          <label>Female</label>
          <value>female</value>
        </item>
      </select1>
      <input appearance="zscore-weight" ref="/followup/zscore/weight">
        <label>Weight (kg)</label>
      </input>
      <input appearance="zscore-height" ref="/followup/zscore/height">
        <label>Height/Length (cm)</label>
      </input>
      <input ref="/followup/zscore/date_of_birth">
        <label>Date of birth</label>
      </input>
      <input appearance="zscore-weight-for-height hidden" ref="/followup/zscore/zscore_wfh">
        <label>WFH</label>
      </input>
      <input ref="/followup/zscore/nn">
        <label>WFH: <output value=" /followup/zscore/zscore_wfh "/></label>
      </input>
      <input ref="/followup/zscore/muac">
        <label>MUAC Measurement</label>
      </input>
    </group>
    <group appearance="field-list" ref="/followup/exit">
      <label></label>
      <select1 ref="/followup/exit/outcome">
        <label>Exit outcome</label>
        <item>
          <label>Cured</label>
          <value>cured</value>
        </item>
        <item>
          <label>Transfer to OTP</label>
          <value>otp</value>
        </item>
        <item>
          <label>Transfer to SFP</label>
          <value>sfp</value>
        </item>
        <item>
          <label>Transfer to SC</label>
          <value>sc</value>
        </item>
        <item>
          <label>Transfer to a different site for the same program</label>
          <value>different_site</value>
        </item>
        <item>
          <label>Non-responsive (non-recovered)</label>
          <value>nonresponsive</value>
        </item>
      </select1>
      <input ref="/followup/exit/enrollment">
        <label>Enrollment date: <output value=" /followup/enrollment_date "/></label>
      </input>
      <input ref="/followup/exit/stay">
        <label>Length of stay in days: <output value=" /followup/exit/length_stay "/></label>
      </input>
      <select1 ref="/followup/exit/enroll">
        <label>Do you need to enroll <output value=" /followup/patient_name "/> in another treatment enrollment program</label>
        <item>
          <label>Yes</label>
          <value>yes</value>
        </item>
        <item>
          <label>No</label>
          <value>no</value>
        </item>
      </select1>
    </group>
    <group appearance="field-list summary" ref="/followup/summary">
      <label></label>
      <input ref="/followup/summary/n_2">
        <label>&lt;h4 style=&quot;text-align:center;&quot;&gt;<output value=" /followup/patient_name "/>&lt;/h4&gt;</label>
      </input>
      <input ref="/followup/summary/n_4">
        <label>Gender: <output value=" /followup/zscore/gender "/></label>
      </input>
      <input ref="/followup/summary/n_5">
        <label>Date of birth: <output value=" /followup/zscore/date_of_birth "/></label>
      </input>
      <input ref="/followup/summary/n_6">
        <label>Weight: <output value=" /followup/zscore/weight "/> kg</label>
      </input>
      <input ref="/followup/summary/n_7">
        <label>Height: <output value=" /followup/zscore/height "/> cm</label>
      </input>
      <input ref="/followup/summary/n_8">
        <label>MUAC: <output value=" /followup/zscore/muac "/> cm</label>
      </input>
      <input ref="/followup/summary/n_9">
        <label>Weight for height z-score: <output value=" /followup/zscore/zscore_wfh "/></label>
      </input>
      <input ref="/followup/summary/n_10">
        <label>Exit outcome: <output value=" /followup/exit/outcome "/></label>
      </input>
      <input ref="/followup/summary/n_11">
        <label>Length of stay in days: <output value=" /followup/exit/length_stay "/></label>
      </input>
      <input ref="/followup/summary/n_12">
        <label>Enroll in another program: <output value=" /followup/exit/enroll "/></label>
      </input>
    </group>
  </h:body>
</h:html>
